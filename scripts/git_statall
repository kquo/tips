#!/bin/bash
# git_statall 1.0.1
# Run status on all git repos

set -euo pipefail

for r in $(ls -1) ; do
    if [[ -d "$r/.git" ]]; then
        (
            printf "%-50s" "$r"
            cd $r
            Branch="$(git branch --show-current)"
            if [[ "$(git status | grep 'working tree clean')" ]]; then
                printf "ğŸ‘ $Branch\n"
            else
                printf "âŒ $Branch\n"
            fi
        )
    fi
done
